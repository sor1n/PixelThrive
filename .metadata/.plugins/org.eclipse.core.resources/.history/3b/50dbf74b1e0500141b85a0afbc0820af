package com.base.pixelthrive.guis;

import org.newdawn.slick.Color;

import com.base.engine.Font;
import com.base.engine.Render;
import com.base.engine.Vector2f;
import com.base.engine.Window;
import com.base.pixelthrive.GUI;
import com.base.pixelthrive.PTGame;

public class MainMenu extends GUI
{
	private Font title = Render.getFont(57f), version = Render.getFont(30f);
	
	private int shadX = 0, shadY = 0;
	
	public MainMenu()
	{
		
	}

	public void update(float delta)
	{
		if(active)
		{
			if(shadX < 3) shadX++;
			if(shadX == 3 && shadY < 3) shadY++;
			if(shadY == 3 && shadX > 0) shadX--;
			if(shadX)
		}
	}

	public void input(float delta)
	{
		if(active)
		{
			
		}
	}

	public void render()
	{
		if(active)
		{
			Render.pushMatrix();
			Render.drawRectangle(Vector2f.ZERO, Window.getSize(), new Color(60, 180, 220)); //background
			Render.drawCenteredStringFixedY(Vector2f.ZERO, new Vector2f(Window.getSize().getX(), 40), PTGame.TITLE, new Color(0xffffff), title, new Vector2f(shadX, shadY)); //title
			Render.drawString(Window.getSize().sub(Render.getStringSize(PTGame.VERSION, version)), PTGame.VERSION, new Color(0xffffff), version, new Vector2f(-shadX, -shadY)); //version text
			Render.popMatrix();
		}
	}
}
